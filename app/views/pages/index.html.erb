<h1>Pages Directory</h1>

<div class="form-actions">
  <%= link_to 'New Page', new_page_path, :class => "button green" %>
</div>

<% if Page.all.empty? %>
  <div class="empty">
    Click Here to Add Your First Page!
  </div>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.author %></td>
    <td><%= distance_of_time_in_words(page.created_at, Time.now) %> ago</td>
    <td class="small"><%= link_to 'View', page, :class => "button grey" %></td>
    <td class="small"><%= link_to 'Edit', edit_page_path(page), :class => "button grey" %></td>
    <td class="small"><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button grey danger" %></td>
  </tr>
<% end %>
</table>

<br />

<div class="form-actions">
  <%= link_to 'New Page', new_page_path, :class => "button green" %>
</div>
